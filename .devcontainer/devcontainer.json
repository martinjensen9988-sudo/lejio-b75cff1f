{
  "name": "Lejio Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "github.copilot.chat.useWorkspaceContext": false,
        "github.copilot.advanced": {
          "timeout": 120000
        },
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/**": true,
          "**/bun.lockb": true,
          "**/package-lock.json": true,
          "**/dist/**": true,
          "**/build/**": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/bun.lockb": true,
          "**/package-lock.json": true,
          "**/dist": true
        }
      },
      "extensions": [
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "npm install"
}
