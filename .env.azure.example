# Azure Environment Variables Template
# Copy this to .env.azure and fill in your values

# ============================================
# Azure SQL Database
# ============================================
SQLCONNECTIONSTRING=Server=tcp:sql-xxxxxx.database.windows.net,1433;Initial Catalog=lejio-fri;Persist Security Info=False;User ID=sqladmin;Password=<your-password>;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# ============================================
# Azure Key Vault
# ============================================
KEY_VAULT_URL=https://kv-xxxxxx.vault.azure.net/
KEY_VAULT_NAME=kv-lejio-fri-dev

# ============================================
# Static Web App & Functions
# ============================================
REACT_APP_API_BASE=/api
AZURE_FUNCTION_URL=https://func-lejio-fri-dev.azurewebsites.net
STATIC_WEB_APP_URL=https://lejio-fri.azurestaticapps.net

# ============================================
# Storage Account
# ============================================
STORAGE_ACCOUNT_NAME=stlejiofridev
STORAGE_ACCOUNT_KEY=<storage-key>
STORAGE_ACCOUNT_BLOB_URL=https://stlejiofridev.blob.core.windows.net/

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=dev
AZURE_LOCATION=westeurope
AZURE_RESOURCE_GROUP=rg-lejio-fri-dev

# ============================================
# Supabase (for Lejio main platform - NOT for Fri)
# ============================================
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_KEY=<your-anon-key>

# ============================================
# Monitoring
# ============================================
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<app-insights-key>;...
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ============================================
# Auth & Security
# ============================================
JWT_SECRET=<generate-random-secret>
JWT_EXPIRATION=86400  # 24 hours

# ============================================
# Feature Flags
# ============================================
FEATURE_PAGE_BUILDER=true
FEATURE_BOOKING_CALENDAR=true
FEATURE_INVOICE_PDF=true
FEATURE_EMAIL_NOTIFICATIONS=true

# ============================================
# Email Service (SendGrid or similar)
# ============================================
SENDGRID_API_KEY=<api-key>
SENDGRID_FROM_EMAIL=noreply@lejio-fri.com

# ============================================
# Payment Integration (Stripe or similar)
# ============================================
STRIPE_API_KEY=<your-key>
STRIPE_WEBHOOK_SECRET=<webhook-secret>

# ============================================
# Analytics
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXX
HOTJAR_ID=xxxxx
